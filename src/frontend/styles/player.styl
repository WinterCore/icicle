player-background = #14172B

trackbar-active-area = 10px
trackbar-height      = 2px

.player-outer
    height player-height
    background player-background
    position fixed
    bottom 0
    width 100%
    z-index 10
    display flex
    align-items center
    padding 0 36px
    .player-info
        font-size 14px
        max-width 200px
        overflow hidden
        .player-title
            white-space nowrap
            font-weight bold
        .player-by
            font-size 90%
            color #999
    .player-controls
        display flex
        align-items center
        justify-content center
        width 200px
        .icon
            width 16px
        .play-pause
            cursor pointer
            background #20557F
            border-radius 50%
            width 48px
            height 48px
            margin 0 16px
            padding 10px
            text-align center
            .icon
                margin-left 1px
                width 18px
    .player-trackbar
        flex 1
        .trackbar
            width 100%
            height trackbar-active-area
            position relative
            padding ((trackbar-active-area / 2) - (trackbar-height / 2)) 0
            .trackbar-background
                width 100%
                background rgba(255, 255, 255, 0.2)
                height trackbar-height
            .trackbar-progress
                position absolute
                top ((trackbar-active-area / 2) - (trackbar-height / 2))
                background white
                height trackbar-height
        
    .player-duration
        font-size 12px
        margin 0 40px
    .player-volume
        display flex
        flex-direction column
        align-items center
        justify-content center
        .icon
            width 24px
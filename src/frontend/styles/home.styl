person-row-padding = 20px
person-row-height = 80px + (person-row-padding * 2)

person-height = 92px
.action-buttons
    display flex
    & > * + *
        margin-left 20px

.song-outer
    @media (max-width mobile-breakpoint)
        padding 0
    background transparent
    .song > *
        height 100%
    .song
        .song-time-remaining
            font-size 12px
        &:hover
            background card-hover-background
        padding 20px
        transition background 200ms ease-in-out
        height person-height
        
        @media (max-width mobile-breakpoint)
            padding 20px 0
            &:hover
                background transparent
        border-radius (person-height / 2)
        display flex
        .song-info
            font-size 14px
            .song-name
                font-size 16px
                font-weight bold
        .song-image
            background-size cover
            background-position center center
            min-height (person-height - 40px)
            min-width (person-height - 40px)
            border-radius 50%
        .song-middle-outer
            flex 1
            min-width 0
            margin-left 20px
            display flex
            flex-direction column
            justify-content space-around
        .song-duration
            margin 0 18px
            display flex
            justify-content center
            font-size 14px
            align-items center
        .song-actions
            margin-right 10px
            display flex
            align-items center
            .icon + .icon
                margin-left 14px
            .icon
                cursor pointer
                height 20px
                width 20px
person-row-padding = 20px
person-row-height = 80px + (person-row-padding * 2)

person-height = 92px

.queue-item-outer
    @media (max-width mobile-breakpoint)
        padding 0
    background transparent
    .queue-item > *
        height 100%
    .queue-item
        .queue-item-time-remaining
            font-size 12px
        &:hover
            background card-hover-background
        padding 20px
        transition background 200ms ease-in-out
        height person-height
        
        @media (max-width mobile-breakpoint)
            padding 20px 0
            &:hover
                background card-hover-background
        border-radius (person-height / 2)
        display flex
        .queue-item-info
            font-size 14px
            .queue-item-name
                font-size 16px
                font-weight bold
        .queue-item-image
            background-size cover
            background-position center center
            min-height (person-height - 40px)
            min-width (person-height - 40px)
            border-radius 50%
        .queue-item-middle-outer
            flex 1
            min-width 0
            margin-left 20px
            display flex
            flex-direction column
            justify-content space-around
        .queue-item-duration
            margin 0 18px
            display flex
            justify-content center
            font-size 14px
            align-items center
        .queue-item-actions
            margin-right 10px
            display flex
            align-items center
            .icon + .icon
                margin-left 14px
            .icon
                cursor pointer
                height 20px
search-input-height = 48px
focused-color       = font-color;
unfocused-color     = #FFF;

.input-outer
    display flex
    flex-direction row-reverse
    align-items center
    height search-input-height
    border-radius (search-input-height / 2)
    .icon
        height (search-input-height / 2)
        fill unfocused-color
        margin-right 10px
        transition fill 150ms ease-in-out
    input
        background transparent
        height 100%
        border none
        width 100%
        color unfocused-color
        font-size 16px
        border-bottom 1px solid rgba(255, 255, 255, 0.4)
        transition border-bottom 150ms linear
        &:focus
            outline 0
            border-bottom 1px solid focused-color
            color focused-color
        &:focus + .icon
            fill focused-color

        &::placeholder,
        &::-ms-input-placeholder,
        &:-ms-input-placeholder
            color #fff
    
      
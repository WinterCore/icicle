{
    "compilerOptions": {
        "module"                 : "commonjs",
        "target"                 : "es2018",
        "lib"                    : ["esnext", "dom"],
        "sourceMap"              : true,
        "experimentalDecorators" : true,
        "emitDecoratorMetadata"  : true,
        "strict"                 : true,
        "noImplicitAny"          : true,
        "noImplicitReturns"      : true,
        "jsx"                    : "react",
    },
    "include": [
        "./src/server/**/*",
        "./config/server.ts",
        "./src/frontend/**/*",
        "./config/frontend.ts"
    ],
    "files" : [
        "./src/constants.ts",
        "./src/shared.d.ts"
    ]
}
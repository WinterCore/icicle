{
    "compilerOptions": {
        "outDir"              : "./dist/frontend",
        "sourceMap"           : true,
        "lib"                 : ["dom"],
        "module"              : "commonjs",
        "strict"              : true,
        "strictNullChecks"    : true,
        "strictFunctionTypes" : true,
        "noImplicitAny"       : true,
        "noImplicitReturns"   : true,
        "noImplicitThis"      : true,
        "target"              : "es6",
        "jsx"                 : "react"
    },
    "include": [
        "./src/frontend/**/*",
        "./src/constants.ts",
        "./src/shared.d.ts",
        "./config/frontend.ts"
    ]
}
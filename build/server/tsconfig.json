{
    "compilerOptions": {
        "module"                 : "commonjs",
        "target"                 : "es2018",
        "lib"                    : ["esnext"],
        "sourceMap"              : true,
        "strict"                 : true,
        "strictNullChecks"       : true,
        "strictFunctionTypes"    : true,
        "noImplicitAny"          : true,
        "noImplicitReturns"      : true,
        "noImplicitThis"         : true,
        "experimentalDecorators" : true,
        "emitDecoratorMetadata"  : true,
        "jsx"                    : "react",
    },
    "include": [
        "./src/server/**/*",
        "./src/constants.ts",
        "./src/shared.d.ts",
        "./config/server.ts"
    ]
}